doctype html
html(ng-app='app')
    head
        title= title
        link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css')
        link(rel='stylesheet', href='css/site.css')
        link(rel='icon', href='favicon.ico', type='image/x-icon')
        link(rel='shortcut icon', href='favicon.ico', type='image/x-icon')

        script(type='text/javascript', src='//code.jquery.com/jquery-2.2.0.min.js')
        script(type='text/javascript', src='js/socket.io-1.3.7.js')
        script(type='text/javascript', src='js/angular.min.js')
        script(type='text/javascript', src='js/angular-resource.min.js')
        script(type='text/javascript', src='js/src/controller.js')
        script(type='text/javascript', src='js/src/service.js')
    body(ng-controller='ideCtrl')
        div(growl='')
        nav(class='navbar navbar-default')
            div(class='container-fluid')
                .navbar-header
                    button(type='button', class='navbar-toggle', ng-click='navbarCollapsed = !navbarCollapsed')
                        span(class='sr-only') Toggle navigation
                        span(class='icon-bar')
                        span(class='icon-bar')
                        span(class='icon-bar')

                    a(class='navbar-brand', href='#/') NodeMCU IDE

                div(collapse='!navbarCollapsed', class='collapse navbar-collapse')

                    form(class='navbar-form navbar-right')
                        .form-group
                            .input-group
                                input(type='text', class='form-control', placeholder='IP:PORT', ng-model='board.address', ng-disabled='board.disabled')
                                span(class='input-group-btn')
                                    button(type='submit', class='btn btn-primary', ng-click='board.connect()', ng-disabled='board.disabled').
                                        Connect
                    ul(class='nav navbar-nav navbar-right')
                        //li
                            a(href='#/item') Menu Item

        div(class='container-fluid main-container')
            block content